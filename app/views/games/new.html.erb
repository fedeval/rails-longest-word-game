<h1>New Game</h1>
<ul class="list-inline letter-list"><% @letters.each do |letter|%>
  <li class="letter list-inline-item"><%= letter %></li>  
  <% end %> 
</ul>
<br>
<form class="d-flex" action="/score" method="POST">
  <input type="text" class="form-control" name="word">
  <input type="submit" value="Check!" class="btn btn-primary">
  <input name="letters" type="hidden" value=<%= "#{@letters.join()}" %>>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
</form>
